        <input type="radio" name="question" value ="A" id="option1">
        <label for="option1" id="option1label">lorem </label><br>
        <input type="radio" name="question" value ="B" id="option2">
        <label for="option2" id="option2label">lorem</label>    <br>  
        <input type="radio" name="question" value ="C" id="option3">
        <label for="option3" id="option3label">lorem</label><br>
        <input type="radio" name="question" value ="D" id="option4">
        <label for="option4" id="option4label">lorem</label> <br>
        </div></div>
    <div class="col-md-4 col-lg-3 overflow-auto" style = "height : 80vh" id="sidepallett">
        <div class = "container-fluid">
            <button class = "btn btn-success my-2" style = "width : 20% ;" id = "attempted">0</button> Attempted questions<br>
            <button class="btn btn-danger my-2" style = "width : 20% ;" id="notanswered">0</button> Not answered<br>
            <button class="btn btn-primary my-2" style = "width : 20% ;" id="reviewed">0</button> Reviewed<br>
            <button class="btn btn-secondary my-2" style = "width : 20% ;" id="notvisited">14</button> Not visited<br>
        <div id="qbuttons" class = "row row-cols-4 row-cols-md-4 border-top border-3 border-dark mt-3 pt-3">
    <% for(let i = 0;i<number;i++)  {%>
        <button id="<%= i %>" class = "btn-secondary buttons col btn" style = "width : 20% ; margin: 2%;">
            <%= i+1 %>
        </button>
        <% } %> 
    </div></div></div></div>
    </div>
    <div class = "container-fluid mt-2">
        <div class="row">
        <div class = "col-sm-8 col-lg-9 d-flex">
        <button id="previous" class = "btn btn-secondary">previous</button>
        <button id="markforreview" class = "text-nowrap btn btn-primary mx-2">mark for review</button>
        <button id="pickans" class = "text-nowrap ms-auto btn btn-secondary">save and next</button></div>
        <div class = "col-sm-4 col-lg-3 d-flex mt-3 mt-sm-0">
        <button id="submit" class = "mx-auto btn btn-success">submit</button></div>
    </div></div>
    <div id="loadmessage">
        <div class = "d-flex flex-column justify-content-center align-items-center" style = "height : 100% ;">
        <h1 id = "messagedelivery">loading please wait...</h1>
        </div>
    </div>

